@model List<SchoolManager.Models.User>

@{
    ViewData["Title"] = "Asignación Académica";
    Layout = "_AdminLayout";
}

<div class="card card-outline card-primary">
    <div class="card-header">
        <h3 class="card-title">Docentes</h3>
    </div>
    <div class="card-body">
        <table id="teachersTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th style="width: 120px;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var teacher in Model)
                    {
                        <tr>
                            <td>@teacher.Name</td>
                            <td>@teacher.Email</td>
                            <td>
                                <a href="@Url.Action("Assign", "AcademicAssignment", new { id = teacher.Id })"
                                   class="btn btn-sm btn-primary">
                                    Asignar
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#teachersTable').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ docentes",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    zeroRecords: "No se encontraron resultados",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)"
                }
            });
        });
    </script>
}
