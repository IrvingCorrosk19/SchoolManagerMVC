@model IEnumerable<SchoolManager.Models.GradeLevel>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-mortarboard text-primary me-2"></i>Gestión de Grados Escolares</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="gradeTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay grados registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var grade in Model)
                        {
                            <tr data-id="@grade.Id">
                                <td class="align-middle text-center">
                                    <span class="grade-name-text">@grade.Name</span>
                                    <input type="text" class="form-control d-none grade-name-input" value="@grade.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="grade-description-text">@grade.Description</span>
                                    <textarea class="form-control d-none grade-description-input">@grade.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-sm btn-primary me-1 btn-edit-grade"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-success d-none me-1 btn-save-grade"><i class="bi bi-check"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-grade"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <label>Nuevo Grado</label>
            <input type="text" id="newGradeName" class="form-control mb-2" placeholder="Nombre del nuevo grado" />
            <textarea id="newGradeDescription" class="form-control mb-2" placeholder="Descripción del grado"></textarea>
            <button class="btn btn-success" onclick="createGrade()"><i class="bi bi-plus-circle me-1"></i> Agregar Grado</button>
        </div>
    </div>
</div>
