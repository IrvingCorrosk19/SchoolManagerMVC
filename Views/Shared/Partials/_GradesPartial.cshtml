@model IEnumerable<SchoolManager.Models.GradeLevel>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title">Gestión de Grados Escolares</h5>
    </div>
    <div class="card-body">
        <table id="gradeTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th style="width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay grados registrados.</td>
                    </tr>
                }
                else
                {
                    foreach (var grade in Model)
                    {
                        <tr data-id="@grade.Id">
                            <td>
                                <span class="grade-name-text">@grade.Name</span>
                                <input type="text" class="form-control d-none grade-name-input" value="@grade.Name" />
                            </td>
                            <td>
                                <span class="grade-description-text">@grade.Description</span>
                                <textarea class="form-control d-none grade-description-input">@grade.Description</textarea>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary btn-edit-grade">Editar</button>
                                <button class="btn btn-sm btn-success d-none btn-save-grade">Guardar</button>
                                <button class="btn btn-sm btn-danger btn-delete-grade">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="mt-3">
            <label>Nuevo Grado</label>
            <input type="text" id="newGradeName" class="form-control mb-2" placeholder="Nombre del nuevo grado" />
            <textarea id="newGradeDescription" class="form-control mb-2" placeholder="Descripción del grado"></textarea>
            <button class="btn btn-success" onclick="createGrade()">Agregar Grado</button>
        </div>
    </div>
</div>
