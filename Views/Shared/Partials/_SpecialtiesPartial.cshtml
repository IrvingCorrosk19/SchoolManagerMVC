@model IEnumerable<SchoolManager.Models.Specialty>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-award text-primary me-2"></i>Gestión de Especialidades Académicas</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="specialtyTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay especialidades registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var specialty in Model)
                        {
                            <tr data-id="@specialty.Id">
                                <td class="align-middle text-center">
                                    <span class="specialty-name-text">@specialty.Name</span>
                                    <input type="text" class="form-control d-none specialty-name-input" value="@specialty.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="specialty-description-text">@specialty.Description</span>
                                    <textarea class="form-control d-none specialty-description-input">@specialty.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-sm btn-primary me-1 btn-edit-specialty"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-success d-none me-1 btn-save-specialty"><i class="bi bi-check"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-specialty"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <label>Nueva Especialidad</label>
            <input type="text" id="newSpecialtyName" class="form-control mb-2" placeholder="Nombre de la nueva especialidad" />
            <textarea id="newSpecialtyDescription" class="form-control mb-2" placeholder="Descripción de la especialidad"></textarea>
            <button class="btn btn-success" onclick="createSpecialty()"><i class="bi bi-plus-circle me-1"></i> Agregar Especialidad</button>
        </div>
    </div>
</div>
