@model IEnumerable<SchoolManager.Models.Specialty>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title">Gestión de Especialidades Académicas</h5>
    </div>
    <div class="card-body">
        <table id="specialtyTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th style="width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay especialidades registradas.</td>
                    </tr>
                }
                else
                {
                    foreach (var specialty in Model)
                    {
                        <tr data-id="@specialty.Id">
                            <td>
                                <span class="specialty-name-text">@specialty.Name</span>
                                <input type="text" class="form-control d-none specialty-name-input" value="@specialty.Name" />
                            </td>
                            <td>
                                <span class="specialty-description-text">@specialty.Description</span>
                                <textarea class="form-control d-none specialty-description-input">@specialty.Description</textarea>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary btn-edit-specialty">Editar</button>
                                <button class="btn btn-sm btn-success d-none btn-save-specialty">Guardar</button>
                                <button class="btn btn-sm btn-danger btn-delete-specialty">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="mt-3">
            <label>Nueva Especialidad</label>
            <input type="text" id="newSpecialtyName" class="form-control mb-2" placeholder="Nombre de la nueva especialidad" />
            <textarea id="newSpecialtyDescription" class="form-control mb-2" placeholder="Descripción de la especialidad"></textarea>
            <button class="btn btn-success" onclick="createSpecialty()">Agregar Especialidad</button>
        </div>
    </div>
</div>
