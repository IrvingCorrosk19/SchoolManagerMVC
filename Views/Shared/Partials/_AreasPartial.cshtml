@model IEnumerable<SchoolManager.Models.Area>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-diagram-3 text-primary me-2"></i>Gestión de Áreas Académicas</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="areaTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay áreas registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var area in Model)
                        {
                            <tr data-id="@area.Id">
                                <td class="align-middle text-center">
                                    <span class="area-name-text">@area.Name</span>
                                    <input type="text" class="form-control d-none area-name-input" value="@area.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="area-description-text">@area.Description</span>
                                    <textarea class="form-control d-none area-description-input">@area.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-sm btn-primary me-1 btn-edit-area"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-success d-none me-1 btn-save-area"><i class="bi bi-check"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-area"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <label>Nueva Área</label>
            <input type="text" id="newAreaName" class="form-control mb-2" placeholder="Nombre de la nueva área" />
            <textarea id="newAreaDescription" class="form-control mb-2" placeholder="Descripción del área"></textarea>
            <button class="btn btn-success" onclick="createArea()"><i class="bi bi-plus-circle me-1"></i> Agregar Área</button>
        </div>
    </div>
</div>
