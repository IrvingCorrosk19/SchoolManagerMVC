@model IEnumerable<SchoolManager.Models.Area>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title">Gestión de Áreas Académicas</h5>
    </div>
    <div class="card-body">
        <table id="areaTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th style="width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay áreas registradas.</td>
                    </tr>
                }
                else
                {
                    foreach (var area in Model)
                    {
                        <tr data-id="@area.Id">
                            <td>
                                <span class="area-name-text">@area.Name</span>
                                <input type="text" class="form-control d-none area-name-input" value="@area.Name" />
                            </td>
                            <td>
                                <span class="area-description-text">@area.Description</span>
                                <textarea class="form-control d-none area-description-input">@area.Description</textarea>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary btn-edit-area">Editar</button>
                                <button class="btn btn-sm btn-success d-none btn-save-area">Guardar</button>
                                <button class="btn btn-sm btn-danger btn-delete-area">Eliminar</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="mt-3">
            <label>Nueva Área</label>
            <input type="text" id="newAreaName" class="form-control mb-2" placeholder="Nombre de la nueva área" />
            <textarea id="newAreaDescription" class="form-control mb-2" placeholder="Descripción del área"></textarea>
            <button class="btn btn-success" onclick="createArea()">Agregar Área</button>
        </div>
    </div>
</div>
