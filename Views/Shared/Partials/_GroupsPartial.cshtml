@model IEnumerable<SchoolManager.Models.Group>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-people text-primary me-2"></i>Gestión de Grupos</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="groupTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Grado</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay grupos registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var group in Model)
                        {
                            <tr data-id="@group.Id">
                                <td class="align-middle text-center">
                                    <span class="group-name-text">@group.Name</span>
                                    <input type="text" class="form-control d-none group-name-input" value="@group.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="group-grade-text">@group.Grade</span>
                                    <input type="text" class="form-control d-none group-grade-input" value="@group.Grade" />
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-sm btn-primary me-1 btn-edit-group"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-success d-none me-1 btn-save-group"><i class="bi bi-check"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-group"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <label>Nuevo Grupo</label>
            <input type="text" id="newGroupName" class="form-control mb-2" placeholder="Nombre del grupo" />
            <input type="text" id="newGroupGrade" class="form-control mb-2" placeholder="Grado del grupo" />
            <button class="btn btn-success" onclick="createGroup()"><i class="bi bi-plus-circle me-1"></i> Agregar Grupo</button>
        </div>
    </div>
</div>

