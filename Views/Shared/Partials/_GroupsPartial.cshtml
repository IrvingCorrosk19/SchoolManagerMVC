@model IEnumerable<SchoolManager.Models.Group>

<div id="groupListContainer">
    @foreach (var group in Model)
    {
        <div class="input-group mb-2">
            <input type="text" class="form-control" value="@group.Name" data-id="@group.Id" />
            <button class="btn btn-primary" onclick="updateGroup(@group.Id, this)">Editar</button>
            <button class="btn btn-danger" onclick="deleteGroup(@group.Id)">Eliminar</button>
        </div>
    }
</div>

<div class="mt-3">
    <input type="text" id="newGroupName" class="form-control" placeholder="Nuevo grupo" />
    <button class="btn btn-success mt-2" onclick="createGroup()">Agregar</button>
</div>
